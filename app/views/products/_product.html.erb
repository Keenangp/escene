        <div class="col-xs-12 col-sm-3 col-md-3 product-list-display">

          <%= product.name %><br>

          <%= image_tag(product.image_url, class: "img-responsive")%>

          <%= product.description %><br>

          <%= product.colour %>

          <%= product.clothing_type %>

          <%= product.team_name %>

          <%= product.price %><br>

          <button type="button" class="btn btn-primary btn-xs btn-block selector" id="prod-show-button">
          <%= link_to 'Show', product %></button><br>

          <button type="button" class="btn btn-primary btn-xs btn-block selector" id="prod-edit-button">
          <%= link_to 'Edit', edit_product_path(product) %></button><br>

          <button type="button" class="btn btn-primary btn-xs btn-block selector" id="prod-destroy-button">
          <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure' } %></button>

        </div><!--/col-->