

<div class="container-fluid">
  <%= form_for(@product) do |f| %>
    <!--<div class="form-group row">-->
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

     <div class="field form-group row">
       <div class="col-sm-6">
         <%= f.label :name, class: "form-control-label" %><br>
         <%= f.text_field :name, class: "form-control" %>
       </div><!--/col-->
     </div><!--/ field-->

      <div class="field form-group row">
        <div class="col-sm-6">
        <%= f.label :description, class: "form-control-label" %><br>
        <%= f.text_area :description, class: "form-control" %>
        </div><!--/col-->
      </div><!--/field-->

      <div class="field form-group row">
        <div class="col-sm-6">
          <%= f.label :image_url, class: "form-control-label" %><br>
          <%= f.text_field :image_url, class: "form-control" %>
        </div><!--/col-->
      </div><!--/field-->

      <div class="field form-group row">
        <div class="col-sm-6">
          <%= f.label :colour, class: "form-control-label" %><br>
          <%= f.text_field :colour, class: "form-control" %>
        </div><!--col--> 
      </div><!--/field-->

      <div class="field form-group row">
        <div class="col-sm-6">
          <%= f.label :clothing_type, class: "form-control-label" %><br>
          <%= f.text_field :clothing_type, class: "form-control" %>
        </div><!--/col-->
      </div><!--/field-->

      <div class="field form-group row">
        <div class="col-sm-6">
          <%= f.label :team_name, class: "form-control-label" %><br>
          <%= f.text_field :team_name, class: "form-control" %>
        </div><!--/col-->
      </div><!--/field-->

      <div class="field form-group row">
        <div class="col-sm-6">
          <%= f.label :price, class: "form-control-label" %><br>
          <%= f.text_field :price, class: "form-control" %>
        </div><!--/col-->
      </div><!--field-->

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  <!--</div>-->
</div><!--container-fluid-->


